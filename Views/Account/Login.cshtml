@using Front_End_Gestion_Pedidos.Models.ViewModel
@model LoginDataModel
@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Pedidos - Login</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        body {
            background: linear-gradient(135deg, #eef2f3, #d6dbe0);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
            overflow: hidden;
            margin: 0;
        }

        .login-container {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 1024px;
            text-align: center;
        }

            .login-container h5 {
                font-weight: 700;
                margin-bottom: 20px;
                font-size: 2.5rem;
            }

            .login-container p {
                font-size: 20px;
                color: #666;
                margin-bottom: 20px;
            }

        .btn-primary {
            background: #4c82f7;
            border: none;
            padding: 18px;
            font-size: 22px;
        }

            .btn-primary:hover {
                background: #356dd0;
            }

        .contact-info {
            font-size: 16px;
            margin-top: 15px;
            color: #555;
            text-align: center;
            white-space: nowrap;
        }

        input.form-control {
            height: 65px;
            font-size: 20px;
            padding: 12px 20px;
        }

        img.logo {
            max-width: 130px;
            height: auto;
            display: block;
            margin: 0 auto;
        }

        @@media (max-width: 768px) {
            .login-container

        {
            padding: 25px;
            max-width: 85%;
            margin: 15px;
        }

        .contact-info {
            font-size: 12px;
            text-align: center;
            white-space: normal;
        }

        input.form-control {
            height: 55px;
            font-size: 18px;
            padding: 10px 18px;
        }

        img.logo {
            max-width: 85px;
        }

        }
    </style>
</head>

<body>
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12 d-flex flex-column align-items-center justify-content-center">
                    <div class="d-flex justify-content-center py-4">
                        <img src="assets/img/logo.png" alt="Logo" class="logo">
                    </div>

                    <div class="login-container">
                        <h5>Iniciar sesión</h5>
                        <p>Ingrese su usuario y contraseña</p>

                        <!-- Muestra errores generales -->
                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger alert-dismissible fade show">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form asp-action="Login" method="post" class="needs-validation" novalidate>
                            <div class="mb-4 text-start">
                                <label asp-for="Username" class="form-label">Usuario</label>
                                <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" required>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="mb-4 text-start">
                                <label asp-for="Password" class="form-label">Contraseña</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
                        </form>

                        <div class="contact-info">
                            ¿Necesita ayuda? Contáctenos al <strong>+54 11 2345-6789</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
