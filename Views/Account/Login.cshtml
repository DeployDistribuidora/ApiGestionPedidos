


@using Front_End_Gestion_Pedidos.Models.ViewModel
@model LoginDataModel
@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                           <h1>Gestión de pedidos</h1>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Iniciar sesión</h5>
                            </div>

                            <!-- Muestra errores generales -->
                            @if (ViewData.ModelState.ErrorCount > 0)
                            {
                                <div class="alert alert-danger">
                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                </div>
                            }

                            <form asp-action="Login" class="row g-3 needs-validation" novalidate method="post">

                                <div class="col-12">
                                    @* <div class="input-group has-validation">  *@                                      
                                        <label asp-for="Username" class="form-label">Usuario</label>
                                        <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    @* </div> *@
                                </div>

                                <div class="col-12">
                                    <label asp-for="Password" class="form-label">Contraseña</label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Ingresar</button>
                                </div>
                                <div class="col-12">
                                    <h6 class="text-muted text-center">Usuarios de Prueba</h6>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item"><strong>Cliente:</strong> mariaC | <strong>Clave:</strong> cliente123</li>
                                        <li class="list-group-item"><strong>Vendedor:</strong> lucasV | <strong>Clave:</strong> vendedor123</li>
                                        <li class="list-group-item"><strong>Supervisor:</strong> lionelS | <strong>Clave:</strong> supervisor123</li>
                                        <li class="list-group-item"><strong>Administracion:</strong> admin | <strong>Clave:</strong> admin123</li>
                                    </ul>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </section>

</div>
