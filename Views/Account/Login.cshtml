@model Front_End_Gestion_Pedidos.Models.LoginDataModel
@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-sm p-4" style="width: 24rem; border-radius: 1rem;">
        <h2 class="text-center text-primary mb-4">Iniciar Sesión</h2>

        <!-- Muestra errores generales -->
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
        }

        <form asp-action="Login" method="post">
            <!-- Campo de usuario -->
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Usuario</label>
                <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Campo de contraseña -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Botón de ingreso -->
            <button type="submit" class="btn btn-primary w-100">Ingresar</button>
        </form>

        <!-- Ayuda para desarrollo -->
        <div class="mt-4">
            <h6 class="text-muted text-center">Usuarios de Prueba</h6>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Usuario:</strong> maria_cliente | <strong>Clave:</strong> cliente123</li>
                <li class="list-group-item"><strong>Usuario:</strong> carlos_vendedor | <strong>Clave:</strong> vendedor456</li>
                <li class="list-group-item"><strong>Usuario:</strong> lucas_supervisor | <strong>Clave:</strong> supervisor789</li>
                <li class="list-group-item"><strong>Usuario:</strong> pablo_admin | <strong>Clave:</strong> adminpassword</li>
            </ul>
        </div>
    </div>
</div>
