@model Front_End_Gestion_Pedidos.Models.LoginDataModel

<div class="login-container">
    <h2>Iniciar Sesión</h2>
    <form asp-action="Login" method="post">
        <!-- Muestra errores si existen -->
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
        <!-- Campo de usuario -->
        <div class="form-group">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <!-- Campo de contraseña -->
        <div class="form-group">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <!-- Botón de ingreso -->
        <button type="submit" class="btn btn-primary">Ingresar</button>
    </form>
</div>




