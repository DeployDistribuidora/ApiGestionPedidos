@using Front_End_Gestion_Pedidos.Models.ViewModel
@model PedidoDetalleViewModel

<div>
    <h6>Información del Pedido</h6>
    <p><strong>Cliente:</strong> @Model.Pedido.IdCliente</p>
    <p><strong>Vendedor:</strong> @Model.Pedido.IdVendedor</p>
    <p><strong>Estado:</strong> @Model.Pedido.Estado</p>
</div>

<div>
    <h6>Productos</h6>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model.Productos)
            {
                <tr>
                    <td>@producto.Codigo</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio</td>
                </tr>
            }
        </tbody>
    </table>
</div>

