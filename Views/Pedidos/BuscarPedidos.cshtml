@model IEnumerable<Front_End_Gestion_Pedidos.Models.Pedido>
@inject IHttpContextAccessor HttpContextAccessor

<div class="pagetitle">
    <h1>Buscar pedidos</h1>
</div>

<section class="section">
    <div class="row">
        <!-- Filtro de Pedidos -->
        <div class="col-lg-7">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Filtros de Búsqueda</h5>

                    <!-- TempData para mensajes -->
                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-info text-center">
                            @TempData["Mensaje"]
                        </div>
                    }

                    <!-- Formulario de Búsqueda -->
                    <form method="get" asp-action="BuscarPedidos" class="row g-3 align-items-center mb-3">
                        <div class="col-md-4">
                            <label for="inputCliente" class="form-label">Cliente</label>
                            <input type="text" id="inputCliente" name="cliente" class="form-control form-control-sm"
                                   placeholder="Nombre del cliente" value="@HttpContextAccessor.HttpContext.Request.Query["cliente"]" />
                        </div>
                        <div class="col-md-4">
                            <label for="inputVendedor" class="form-label">Vendedor</label>
                            <input type="text" id="inputVendedor" name="vendedor" class="form-control form-control-sm"
                                   placeholder="Nombre del vendedor" value="@HttpContextAccessor.HttpContext.Request.Query["vendedor"]" />
                        </div>
                        <div class="col-md-4">
                            <label for="inputFechas" class="form-label">Rango de Fechas</label>
                            <div class="input-group">
                                <input type="date" id="fechaInicio" name="fechaInicio" class="form-control form-control-sm"
                                       value="@HttpContextAccessor.HttpContext.Request.Query["fechaInicio"]" />
                                <span class="input-group-text">a</span>
                                <input type="date" id="fechaFin" name="fechaFin" class="form-control form-control-sm"
                                       value="@HttpContextAccessor.HttpContext.Request.Query["fechaFin"]" />
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary btn-sm">Buscar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tabla de Pedidos -->
        <div class="col-lg-10">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Pedidos</h5>
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead class="table-primary">
                                <tr>
                                    <th scope="col">Detalle</th>
                                    <th scope="col">IdPedido</th>
                                    <th scope="col">IdCliente</th>
                                    <th scope="col">IdVendedor</th>
                                    <th scope="col">Estado</th>
                                    <th scope="col">FechaCreacion</th>                                    
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">No se encontraron pedidos con los filtros aplicados.</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var pedido in Model)
                                    {
                                        <tr>
                                            <td>
                                                <!-- Ícono zoom-in para Detalle -->
                                                <div class="icon text-primary" role="button" data-bs-toggle="modal" data-bs-target="#detalleModal-@pedido.IdPedido">
                                                    <i class="bi bi-zoom-in"></i>
                                                </div>
                                            </td>
                                            <td>@pedido.IdPedido</td>
                                            <td>@pedido.IdCliente</td>
                                            <td>@pedido.IdVendedor</td>
                                            <td>@pedido.Estado</td>
                                            <td>@pedido.FechaCreacion.ToShortDateString()</td>
                                        </tr>

                                        <!-- Modal de Detalle -->
                                        <div class="modal fade" id="detalleModal-@pedido.IdPedido" tabindex="-1" aria-labelledby="detalleModalLabel-@pedido.IdPedido" aria-hidden="true">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="detalleModalLabel-@pedido.IdPedido">Detalle del Pedido #@pedido.IdPedido</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p><strong>Cliente:</strong> @pedido.IdCliente</p>
                                                        <p><strong>Vendedor:</strong> @pedido.IdVendedor</p>
                                                        <p><strong>Estado:</strong> @pedido.Estado</p>
                                                        <p><strong>Fecha de Creación:</strong> @pedido.FechaCreacion.ToShortDateString()</p>
                                                        <p><strong>Otros Detalles:</strong> @pedido.MetodoPago</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-success btn-sm">Aprobar</button>
                                                        <button type="button" class="btn btn-danger btn-sm">Cancelar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>
