@model Front_End_Gestion_Pedidos.Models.ViewModel.HomeViewModel

<div class="container">
    <div class="row">
        <!-- Mensaje de bienvenida -->
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            <h2 class="alert-heading">Bienvenido, @Model.Username</h2>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <div class="row">
        <!-- Mensajes dinámicos -->
        @if (Model.Messages != null && Model.Messages.Any())
        {
            @foreach (var message in Model.Messages)
            {
                <div class="col-12 col-md-6 mb-3">
                    <div class="alert alert-@message.Type alert-dismissible fade show" role="alert">
                        <i class="@message.Icon me-1"></i>
                        @message.Content
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    No hay mensajes disponibles.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <div class="col-8">
        <div class="row">
            <div class="col-12 text-center">
                <img src="/assets/img/Logistics.png" alt="Delivery image" class="img-fluid" />
                @* <a href="https://storyset.com/work" target="_blank">Work illustrations by Storyset</a> *@
            </div>
        </div>
    </div>  

    


</div>

<script type='text/javascript'>
    document.addEventListener('DOMContentLoaded', function () {
        window.setTimeout(() => document.querySelector('svg').classList.add('animated'), 1000);
    });
</script>