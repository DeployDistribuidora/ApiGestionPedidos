@{
    var userRole = ViewBag.UserRole as string;
    var username = ViewBag.Username as string;
}

<h2>Bienvenido/a, @username</h2>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <ul class="navbar-nav">
        @if (userRole == "Cliente")
        {
            <li class="nav-item"><a class="nav-link" href="#">Realizar pedido</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Pedidos</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Productos</a></li>
        }
        else if (userRole == "Administrador")
        {
            <li class="nav-item"><a class="nav-link" href="#">Supervisar pedidos</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Realizar pedido</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Pedidos</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Clientes</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Productos</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Métricas</a></li>
        }
    </ul>
</nav>
