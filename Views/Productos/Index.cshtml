@model List<Front_End_Gestion_Pedidos.Models.Producto>
@{
    ViewData["Title"] = "Gestión de Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string searchTerm = ViewBag.SearchTerm;
}

<div class="container mt-4">
    <div class="sticky-top bg-white py-3 fixed-header" style="z-index: 1020;">
        <h2 class="text-primary text-center">Gestión de Productos</h2>

        <!-- Filtro de búsqueda -->
        <form method="get" asp-action="BuscarProductos" class="d-flex flex-column align-items-center mb-3">
            <div class="mb-2 w-100" style="max-width: 400px;">
                <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Buscar producto" />
            </div>
            <button type="submit" class="btn btn-danger w-100" style="max-width: 150px;">Buscar</button>
        </form>
    </div>

    <!-- Lista de productos -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Stock</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var producto in Model)
                    {
                        <tr>
                            <td>@producto.Id</td>
                            <td>@producto.Nombre</td>
                            <td>@producto.Stock</td>
                            <td>@producto.Precio</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">No se encontraron resultados</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
